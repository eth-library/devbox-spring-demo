{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "jdk22@latest",
    "maven@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "compile": [
        "mvn compile"
      ],
      "test": [
        "mvn test"
      ],
      "start": [
        "mvn spring-boot:start"
      ],
      "stop": [
        "mvn spring-boot:stop"
      ]
    }
  }
}
